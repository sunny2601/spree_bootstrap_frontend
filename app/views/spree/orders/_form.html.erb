<%= render :partial => 'spree/shared/error_messages', :locals => { :target => @order } %>
<div class="col-md-12" style="background:rgb(151, 153, 150);;height:40px;"><p class="cart-p">Continue Shopping</p></div>
<table class="table" id="cart-detail" data-hook>
  <div class="col-md-12 bottom-border bottom-space">
    <div class="col-md-2">Product Image</div>
    <div class="col-md-3">Product Name</div>
    <div class="col-md-2">Product Price</div>
    <div class="col-md-1">Quantity</div>
    <div class="col-md-2">Product Total</div>
    <div class="col-md-2">Action</div>
  </div>
  <tbody id="line_items" data-hook>
    <%= render partial: 'line_item', collection: order_form.object.line_items, locals: {order_form: order_form} %>
  </tbody>
  <% if @order.all_adjustments.exists? %>
    <tr class="cart-subtotal">
      <td colspan="4" align='right'><h5><%= Spree.t(:cart_subtotal, :count => @order.line_items.sum(:quantity)) %></h5></th>
      <td colspan><h5><%= order_form.object.display_item_total %></h5></td>
      <td></td>
    </tr>
    <%= render "spree/orders/adjustments" %>
  <% end %>
